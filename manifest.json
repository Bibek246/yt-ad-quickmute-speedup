{
  "manifest_version": 3,
  "name": "YouTube Ad Mute & Speedup (Auto Skip/Next)",
  "version": "1.2.2",
  "description": "Mutes & speeds up YouTube ads; restores after ads. Auto-clicks YouTube's own Skip/Next when available.",
  "permissions": ["storage"],
  "host_permissions": [
    "*://www.youtube.com/*",
    "*://m.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://www.youtube.com/*",
        "*://m.youtube.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
