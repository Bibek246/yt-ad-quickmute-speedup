{
  "manifest_version": 3,
  "name": "YouTube Ad Mute & Speedup (No Skip)",
  "version": "1.0.0",
  "description": "Mutes and speeds up YouTube ads without skipping, then restores your settings.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["storage"],
  "host_permissions": [
    "*://www.youtube.com/*",
    "*://m.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://www.youtube.com/*",
        "*://m.youtube.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options.html"
}
